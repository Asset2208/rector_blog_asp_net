                <li class="nav-item">
                    @Html.ActionLink("Новости", "Index", "BlogPosts", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>

            @Html.Partial("_LoginPartial")

        </div>
    </nav>
